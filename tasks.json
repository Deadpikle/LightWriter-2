{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "tsc",
    "isShellCommand": true,
    // Under windows use tsc.exe. This ensures we don't need a shell.
	"windows": {
		"command": "tsc.exe"
	},
    "args": ["-p", "."],
    "showOutput": "silent",
    "problemMatcher": "$tsc"
}